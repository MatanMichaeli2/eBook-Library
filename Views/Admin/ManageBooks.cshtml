@model IEnumerable<WebApplication2.Models.Book>

<div class="manage-books-wrapper">
    <div class="header">
        <h1>Manage Books</h1>
        <a asp-action="AddBook" class="btn btn-primary add-book-btn">Add New Book</a>
    </div>

    @if (!Model.Any())
    {
        <p class="no-books-msg">No books found.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-header">
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th>Year</th>
                        <th>Genre</th>
                        <th>Price (Buy)</th>
                        <th>Price (Borrow)</th>
                        <th>Discounted Price</th>
                        <th>Discount End Date</th>
                        <th>Age Limit</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.Publisher</td>
                            <td>@book.YearPublished</td>
                            <td>@book.Genre</td>
                            <td>@book.PriceBuy</td>
                            <td>@book.PriceBorrow</td>
                            <td>
                                @if (book.DiscountedPrice.HasValue && book.DiscountEndDate.HasValue && book.DiscountEndDate > DateTime.Now)
                                {
                                    <span class="text-danger"><s>@book.PriceBuy</s> @book.DiscountedPrice</span>
                                }
                                else
                                {
                                    <span>N/A</span>
                                }
                            </td>
                            <td>
                                @if (book.DiscountEndDate.HasValue && book.DiscountEndDate > DateTime.Now)
                                {
                                    @book.DiscountEndDate.Value.ToShortDateString()
                                }
                                else
                                {
                                    <span>N/A</span>
                                }
                            </td>
                            <td>@book.AgeLimit</td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="EditBook" asp-route-id="@book.BookId" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="EditDiscount" asp-route-id="@book.BookId" class="btn btn-info btn-sm">Sale Management</a>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@book.BookId', '@book.Title')">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<script>
    function confirmDelete(bookId, bookTitle) {
        if (confirm(`Are you sure you want to delete "${bookTitle}"?`)) {
            const form = document.createElement('form');
            form.method = 'post';
            form.action = `/Admin/DeleteBook/${bookId}`;

            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = '__RequestVerificationToken';
            input.value = document.querySelector('input[name="__RequestVerificationToken"]').value;

            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>

<style>
    .manage-books-wrapper {
        padding: 20px;
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    h1 {
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    .add-book-btn {
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        background-color: #d32f2f;
        border: none;
        outline: none;
    }

        .add-book-btn:hover {
            background-color: #a52727;
            color: #fff;
        }

        .add-book-btn:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(211, 47, 47, 0.5);
        }

    .no-books-msg {
        color: #555;
        font-size: 18px;
        text-align: center;
    }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

    .table-header {
        background-color: #222222;
        color: #fff;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-sm {
        padding: 5px 10px;
        border-radius: 3px;
    }

    .btn-warning {
        background-color: #BFBFBF;
        border: none;
        color: #333;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #BFBFBF;
        }

    .btn-info {
        background-color: #929292;
        border: none;
        color: #fff;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        .btn-info:hover {
            background-color: #929292;
        }

    .btn-danger {
        background-color: #676767;
        border: none;
        color: #fff;
        border-radius: 20px;
        padding: 10px 20px;
        font-size: 14px;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #676767;
        }

    .text-danger {
        color: #ff4757;
        font-weight: bold;
    }
</style>
