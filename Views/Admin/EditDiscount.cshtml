@model WebApplication2.Models.Book

<div class="page-container">
    <div class="form-wrapper">
        <div class="header">
            <h1>Manage Discount for @Model.Title</h1>
        </div>
        <form asp-action="EditDiscount" method="post">
            <input type="hidden" asp-for="BookId" />

            <div class="form-group">
                <label for="DiscountedPrice">Discounted Price:</label>
                <input type="number" asp-for="DiscountedPrice" class="form-control" step="0.01" />
                <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DiscountEndDate">Discount End Date:</label>
                <input type="date" asp-for="DiscountEndDate" class="form-control" />
                <span asp-validation-for="DiscountEndDate" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="ManageBooks" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 100px);
        margin: 20px 0;
        padding-top: 20px;
    }

    .form-wrapper {
        background-color: #f9f9f9;
        color: black;
        padding: 15px;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        width: 40%;
        max-width: 500px;
    }

    .header h1 {
        text-align: center;
        font-size: 1.5rem;
        margin-bottom: 15px;
        color: black;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .btn-success {
        padding: 8px 15px;
        font-size: 14px;
        border-radius: 4px;
        background-color: #28a745;
        color: white;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        padding: 8px 15px;
        font-size: 14px;
        border-radius: 4px;
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-danger {
        font-size: 0.8rem;
        color: red;
    }
</style>

