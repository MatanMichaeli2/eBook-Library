@model WebApplication2.Models.Book

<div class="page-container">
    <div class="form-wrapper">
        <div class="header">
            <h1>Add New Book</h1>
        </div>
        <form asp-action="AddBook" method="post" id="addBookForm">
            <div class="form-group">
                <label for="Title">Title:</label>
                <input type="text" id="Title" name="Title" class="form-control" value="@Model?.Title" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Author">Author:</label>
                <input type="text" id="Author" name="Author" class="form-control" value="@Model?.Author" required />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Publisher">Publisher:</label>
                <input type="text" id="Publisher" name="Publisher" class="form-control" value="@Model?.Publisher" required />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="YearPublished">Year Published:</label>
                <input type="number" id="YearPublished" name="YearPublished" class="form-control" value="@Model?.YearPublished" required />
                <span asp-validation-for="YearPublished" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Genre">Genre:</label>
                <input type="text" id="Genre" name="Genre" class="form-control" value="@Model?.Genre" required />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <input type="hidden" id="Formats" name="Formats" value="pdf" />

            <div class="form-group">
                <label for="PriceBuy">Price (Buy):</label>
                <input type="number" id="PriceBuy" name="PriceBuy" step="0.01" class="form-control" value="@Model?.PriceBuy" required />
                <span asp-validation-for="PriceBuy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="PriceBorrow">Price (Borrow):</label>
                <input type="number" id="PriceBorrow" name="PriceBorrow" step="0.01" class="form-control" value="@Model?.PriceBorrow" required />
                <span asp-validation-for="PriceBorrow" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="CopiesAvailable">Copies Available:</label>
                <input type="number" id="CopiesAvailable" name="CopiesAvailable" class="form-control" value="@Model?.CopiesAvailable" required />
                <span asp-validation-for="CopiesAvailable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="AgeLimit">Age Limit:</label>
                <input type="number" id="AgeLimit" name="AgeLimit" class="form-control" value="@Model?.AgeLimit" required />
                <span asp-validation-for="AgeLimit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="CoverImage">Cover Image Path:</label>
                <input type="string" id="CoverImage" name="CoverImage" class="form-control" value="@Model?.CoverImage" required />
                <span asp-validation-for="CoverImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="IsBorrowable">Is Borrowable:</label>
                <input type="hidden" name="IsBorrowable" value="false" />
                <input type="checkbox" id="IsBorrowable" name="IsBorrowable" value="true" class="form-check-input" checked="@Model?.IsBorrowable" />
                <span asp-validation-for="IsBorrowable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="IsDiscounted">Is Discounted:</label>
                <input type="hidden" name="IsDiscounted" value="false" />
                <input type="checkbox" id="IsDiscounted" name="IsDiscounted" value="true" class="form-check-input" checked="@Model?.IsDiscounted" />
                <span asp-validation-for="IsDiscounted" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DiscountEndDate">Discount End Date:</label>
                <input type="date" id="DiscountEndDate" name="DiscountEndDate" class="form-control" value="@Model?.DiscountEndDate?.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DiscountEndDate" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Add Book</button>
            </div>
        </form>
    </div>
</div>

<style>
    .page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 100px);
        margin: 20px 0;
        padding-top: 20px;
    }

    .form-wrapper {
        background-color: #f9f9f9;
        color: black;
        padding: 15px;
        border-radius: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        width: 40%;
        max-width: 500px;
    }

    .header h1 {
        text-align: center;
        font-size: 1.5rem;
        margin-bottom: 15px;
        color: black;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 10px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            outline: none; 
            border-color: #ff4757; 
            box-shadow: 0 0 5px rgba(255, 71, 87, 0.5); 
        }

    .btn-primary {
        padding: 8px 15px;
        font-size: 14px;
        border-radius: 4px;
        background-color: #ff4757;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #e63e4d;
        }

    .text-danger {
        font-size: 0.8rem;
        color: red;
    }
</style>


