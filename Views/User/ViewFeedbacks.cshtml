@model IEnumerable<WebApplication2.Models.Feedback>

<div class="feedback-wrapper">
    <div class="header">
        <h1>Feedback for @ViewData["BookTitle"]</h1>
        <p class="average-rating">
            Average Rating: @ViewData["AverageRating"] <span class="star">&#9733;</span>
        </p>
    </div>

    @if (!Model.Any())
    {
        <p class="no-feedback-msg">No feedback available for this book.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-header">
                    <tr>
                        <th>User</th>
                        <th>Rating</th>
                        <th>Comment</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var feedback in Model)
                    {
                        <tr>
                            <td>@feedback.User?.FirstName @feedback.User?.LastName</td>
                            <td>@feedback.Rating</td>
                            <td>@feedback.Comment</td>
                            <td>@feedback.FeedbackDate.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .feedback-wrapper {
        padding: 20px;
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .header {
        margin-bottom: 20px;
        text-align: center;
    }

    h1 {
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    .average-rating {
        font-size: 18px;
        color: #555;
        margin-top: 5px;
    }

    .star {
        color: #d32f2f;
        font-size: 18px;
    }

    .no-feedback-msg {
        color: #555;
        font-size: 18px;
        text-align: center;
    }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

    .table-header {
        background-color: #222222;
        color: #fff;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }
</style>

