<div class="book-reader">
    <h1 class="book-title">@ViewBag.Title</h1>
    <p class="book-details"><strong>Author:</strong> @ViewBag.Author | <strong>Publisher:</strong> @ViewBag.Publisher</p>
    
    <hr />

    <div id="book-content" class="book-page">
        <div class="page-content">
            @if ((int)ViewBag.CurrentPage == 1)
            {
                <p>
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text...
                </p>
            }
            else if ((int)ViewBag.CurrentPage == 2)
            {
                <p>
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text...
                </p>
            }
            else if ((int)ViewBag.CurrentPage == 3)
            {
                <p>
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text
                    Text Text Text Text Text Text Text Text Text Text...
                </p>
            }
            else if ((int)ViewBag.CurrentPage == 4)
            {
                <p style="text-align: center; font-weight: bold; font-size: 1.5rem; color: #222;">
                    "The End"
                </p>
            }
        </div>
    </div>

    <hr />

    <div class="navigation">
        @if ((int)ViewBag.CurrentPage > 1)
        {
            <a asp-action="ReadBook" asp-route-id="@ViewBag.BookId" asp-route-page="@(ViewBag.CurrentPage - 1)" class="btn btn-primary navigation-btn">← Previous Page</a>
        }
        @if ((int)ViewBag.CurrentPage < (int)ViewBag.TotalPages)
        {
            <a asp-action="ReadBook" asp-route-id="@ViewBag.BookId" asp-route-page="@(ViewBag.CurrentPage + 1)" class="btn btn-primary navigation-btn">Next Page →</a>
        }
    </div>

    <p class="page-number">Page @ViewBag.CurrentPage of @ViewBag.TotalPages</p>
</div>

<style>
    body {
        background-color: #222222;
        font-family: 'Georgia', serif;
    }

    .book-reader {
        max-width: 800px;
        margin: 30px auto;
        padding: 20px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .book-title {
        text-align: center;
        font-size: 2rem;
        color: #333;
        margin-bottom: 10px;
    }

    .book-details {
        text-align: center;
        font-size: 1rem;
        color: #555;
    }

    .book-page {
        background: #fdfde7;
        padding: 20px;
        border: 1px solid #e0d7a3;
        border-radius: 10px;
        margin: 20px 0;
        box-shadow: inset 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .page-content {
        font-size: 1.2rem;
        line-height: 1.8;
        text-align: justify;
        color: #3e3d3a;
    }

    .navigation {
        display: flex;
        justify-content: space-between;
        margin: 20px 0;
    }

    .navigation-btn {
        background-color: #e63946;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .navigation-btn:hover {
            background-color: #d32f2f;
    }

    .page-number {
        text-align: center;
        font-size: 1rem;
        color: #888;
    }
</style>
